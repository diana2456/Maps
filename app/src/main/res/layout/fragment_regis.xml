<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.RegisFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="296dp"
                android:layout_height="106dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="90dp"
                android:layout_marginStart="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bike_logo_min" />

            <TextView
                android:id="@+id/tv_text_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Авторизация"
                app:layout_constraintTop_toBottomOf="@id/imageView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="60dp"
                android:textColor="#D8690E"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"/>

            <TextView
                android:id="@+id/tv_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                app:layout_constraintTop_toBottomOf="@id/imageView3"
                app:layout_constraintStart_toEndOf="@id/tv_text_orange"
                android:layout_marginTop="60dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_regis"
                android:layout_width="350dp"
                android:layout_height="65dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="32dp"
                app:cardBackgroundColor="@color/black"
                app:iconSize="47dp"
                android:textAllCaps="false"
                android:layout_marginTop="35dp"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@id/tv_text_orange">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/moto"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Байкер"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="18dp"
                    android:textColor="#989292"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_evacy"
                android:layout_width="350dp"
                android:layout_height="65dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="32dp"
                app:cardBackgroundColor="#617C62"
                app:iconSize="47dp"
                android:textAllCaps="false"
                android:layout_marginTop="35dp"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@id/btn_regis">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/evecyator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Эвакуатор"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="18dp"
                    android:textColor="#989292"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_servis"
                android:layout_width="350dp"
                android:layout_height="65dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="32dp"
                app:cardBackgroundColor="#617C62"
                app:iconSize="47dp"
                android:textAllCaps="false"
                android:layout_marginTop="35dp"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@id/btn_evacy">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/evecyator"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сервис"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="18dp"
                    android:textColor="#989292"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>